<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>{{image.title}}</h2>
    <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
      <i class="fa fa-times"></i>Delete
    </button>
  </div>

    <div class="card-body">
      <p>{{image.description}}</p>
    </div>
    <div class="text-center">
      <img src="/public/upload/{{image.filename}}" alt="" class="img-fluid">
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <button class="btn btn-success"  id="btn-like" data-id="{{image.filename}}">
        <i class="fas fa-thumbs-up"></i>
      </button>
      <p>
        <span class="likes-count">{{image.likes}}</span>
        <i class="fas fa-heart"></i>
      </p>

      <p>
        <i class="fas fa-eye"></i>{{image.views}}
      </p>

      <p>
        <i class="far fa-clock"></i> {{timeago image.timestamp}}
      </p>

    </div>


</div>

<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Comment</h3>

  <button class="btn btn-info" id="btn-toogle-comment">
    <i class="fa fa-comment-o"></i> Post a comment
  </button>
  </div>
  <div class="card-body">
    <blockquote id="post-comment" >
      <form class="" action="/images/{{image.uniqueId}}/comment" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Insert your name" >
        </div>
        <div class="form-group">
          <input type="mail" class="form-control"name="email" placeholder="email">
        </div>
        <div class="form-group">
          <textarea name="comment" rows="2" cols="80" class="form-control" placeholder="Comment"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-success" id="btn-comment">
            <i class="fa fa-comment"></i> Public post
          </button>
        </div>
      </form>
    </blockquote>
    <ul class="list-group p-4">
      {{#each comments}}    
        <li class="list-group-item">
          <div class="row">
            <a href="#" class="col text-center">
              <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
            </a>
            <blockquote class="col">
              <p class="lead">{{comment}}</p>
              <footer class="blockquote-footer">
                {{name}} -{{timeago timestamp}}
              </footer>
            </blockquote>

          </div>
        </li>

      {{/each}}
    </ul>
  </div>
</div>
