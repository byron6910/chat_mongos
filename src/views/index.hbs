<div class="card">
  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="far fa-image"></i> Carga una imagen
    </h3>
  </div>
    <div class="card-body">
      <form action="/images" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <div class="input-group">
            <div class="custom-file">
              <input type="file" name="image" class="custom-file-input" id=inputGroupFile aria-describedby="inputGroupFileAddon" required/>
              <label for="inputGroupFile" class="custom-file-label">Choose File</label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title for image" value="" required>
        </div>
        <div class="form-group">
          <textarea name="description" rows="2" class="form-control" placeholder="Descrition for image" required></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-success">
            <i class="fa fa-upload"></i> Upload Image
          </button>

        </div>
      </form>
    </div>

</div>


<div class="card mt-2">
  <div class="card-header bg-dark text-white">
    <h3><i class="far fa-images"></i>Recently upload</h3>
    <div class="card-body">

        <div class="row">
            {{#each images}}
          <div class="col-md-4">
            <a href="/images/{{uniqueId}}">
              <img src="/public/upload/{{filename}}" alt="" class="h-100 w-100 img-thumbnail">
            </a>
            <div class="card-body">

            </div>
          </div>
            {{/each}}

        </div>

    </div>
  </div>

</div>
